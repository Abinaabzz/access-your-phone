<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_rad"
    tools:context=".DrawPattern">

    <TextView
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please Draw New Pattern"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"/>




    <android:com.andrognito.patternlockview.PatternLockView
        android:id="@+id/patternView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        app:aspectRatio="square"
        app:aspectRatioEnabled="true"
        app:dotAnimationDuration="150"


        app:correctStateColor="@color/colorCorrectLine"
        app:dotCount="3"
        app:dotNormalSize="18dp"
        app:dotSelectedSize="20dp"
        app:normalStateColor="@color/colorNormalLine"
        app:pathWidth="8dp"
        app:wrongStateColor="@color/colorWrongLine"
        layout_height="280dp"
        layout_width="280dp" />



</LinearLayout>